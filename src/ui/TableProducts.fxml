               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
               <font>
                  <Font name="Dubai Regular" size="24.0" />
               </font></Button>
         </children>
      </HBox>
      <Label alignment="CENTER" contentDisplay="TOP" prefHeight="43.0" prefWidth="745.0" text="Products list" textFill="#8d5bf0">
