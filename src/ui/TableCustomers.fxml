<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox>
         <children>
            <Label fx:id="labelUser" prefHeight="17.0" prefWidth="341.0" text="#Name" textFill="#8d5bf0">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
               <font>
                  <Font name="Dubai Bold" size="32.0" />
               </font></Label>
            <ImageView id="image" fx:id="profilePhoto" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" styleClass="ui.style">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin></ImageView>
            <Button mnemonicParsing="false" onAction="#loadMainWindow" prefHeight="49.0" prefWidth="215.0" style="-fx-background-color: #040308;" text="Log out" textFill="#8d5bf0">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
               <font>
                  <Font name="Dubai Regular" size="24.0" />
               </font></Button>
         </children>
      </HBox>
      <Label alignment="CENTER" contentDisplay="TOP" prefHeight="57.0" prefWidth="877.0" text="User account list" textFill="#8d5bf0">
         <font>
            <Font name="Dubai Bold" size="32.0" />
         </font></Label>
      <TableView fx:id="tableCustomers" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-background-color: #DBAFFF;">
        <columns>
          <TableColumn fx:id="colCustomerFN" prefWidth="172.0" style="-fx-background-color: #6743B0;" text="First name" />
          <TableColumn fx:id="colCustomerLN" minWidth="0.0" prefWidth="118.0" style="-fx-background-color: #6743B0;" text="Last name" />
            <TableColumn fx:id="colCustomerID" prefWidth="149.0" style="-fx-background-color: #6743B0;" text="Id(optional)" />
            <TableColumn fx:id="colCustomerAD" maxWidth="264.0" minWidth="-1.0" prefWidth="130.0" style="-fx-background-color: #6743B0;" text="Address" />
            <TableColumn fx:id="colCustomerPH" maxWidth="469.0" minWidth="-1.0" prefWidth="175.0" style="-fx-background-color: #6743B0;" text="Phone" />
            <TableColumn fx:id="colCustomerCO" prefWidth="155.0" text="Comments" />
        </columns>
      </TableView>
   </children>
</VBox>
